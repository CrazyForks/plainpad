{
    "name": "laravel/lumen",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "illuminate/mail": "^6.0",
        "laravel/lumen-framework": "^6.0",
        "league/flysystem": "^1.0",
        "monolog/monolog": "v1.23.*",
        "ramsey/uuid": "^3.9",
        "visualappeal/php-auto-update": "^0.12.3"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^7.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
